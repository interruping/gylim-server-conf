# ─── 도메인 ───
DOMAIN_NAME=n8n.example.com                      # 실제 도메인으로 변경하세요
SSL_EMAIL=you@example.com                        # Let's Encrypt 인증서 알림용 이메일

# ─── PostgreSQL ───
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=여기에_강력한_비밀번호_입력    # 반드시 변경하세요
POSTGRES_PORT=5432

# ─── n8n ───
N8N_ENCRYPTION_KEY=여기에_랜덤_문자열_입력       # 반드시 변경하세요 (openssl rand -hex 32 로 생성)

# ─── n8n 네트워크 (외부 공개 후 사용되는 기본값) ───
N8N_HOST=n8n.example.com                        # DOMAIN_NAME과 동일하게 설정
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.example.com/            # https://DOMAIN_NAME/ 형식으로 설정

# ─── 내부 IP ───
LOCAL_IP=192.168.x.x                            # ip a 명령으로 확인 후 변경하세요
